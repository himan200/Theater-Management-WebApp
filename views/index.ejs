<body>

    <!-- Header -->
    <nav class="navbar navbar-dark header">
        <div class="container">
            <h1 class="navbar-brand">
                <%= title %>
            </h1>
            <a href="/login" class="btn btn-light admin-panel-btn">Admin Panel</a>
        </div>
    </nav>
    <!-- End Header -->

    <div class="container">
        <h2>Movie Schedule</h2>

        <div class="row">
            <!-- Display all movies -->
            <% moviesData.current_movies.forEach(movie=> { %>
                <div class="col-md-4">
                    <div class="card movie-card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= movie.title %>
                            </h5>
                            <img style="width: 100%;" src="/uploads/<%= movie.poster %>" alt="<%= movie.poster %>"
                                class="movie-poster">
                            <div class="movie-info">

                                <p class="card-desc"><span class="description-label ">Description:</span> <%= movie.description %>
                                </p>
                                <p class="card-cast"><span class="cast-label">Cast :</span> <%= movie.cast %>
                                </p>
                            </div>
                            <div class="movie-schedule">
                                <p class="card-text">Show Timings: <%= movie.show_timings %>
                                </p>
                            </div>
                            <!-- Add other movie details here -->
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Cinemax. All rights reserved.</p>
        </div>
    </footer>
    <!-- End Footer -->

