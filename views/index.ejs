/* Style the movie schedule section */
.movie-schedule {
  margin: 20px;
  padding: 20px;
  background-color: rgba(2, 194, 92, 0.236); /* Slightly transparent white for the section */
  border-radius: 8px; /* Rounded corners */
  box-shadow: 0 4px 6px rgba(14, 13, 13, 0.1); /* Soft shadow for depth */
}

/* Style the movie posters */
.movie-poster {
  width: 100%;
  height: auto;
  margin-bottom: 20px; /* Space between posters */
  border: 3px solid #fff; /* White border to make posters pop */
}

.card-title {
  font-size: 24px; /* Set the font size for the title */
  font-weight: bold; /* Make the title text bold */
  color: #333; /* Set the text color to a dark shade for readability */
  margin-bottom: 15px; /* Add some space below the title */
  text-align: center; /* Center-align the title text */
  text-transform: uppercase; /* Transform the text to uppercase for a more impactful look */
  letter-spacing: 1.5px; /* Increase letter spacing for a touch of elegance */
}


/* Style the movie information */


.movie-info .card-desc {
  font-size: 18px; /* Larger font size for the description */
  color: #444; /* Dark grey color for prominence */
  margin-bottom: 10px; /* Space between the description and the cast */
}

.movie-info .card-cast {
  font-size: 16px; /* Slightly smaller font size for the cast names */
  font-style: italic; /* Italicize the cast names */
  color: #666; /* Lighter color for the cast names */
}
.movie-info .card-desc .description-label {
  font-weight: bold; /* Bold font for the label */
  color: #ff4500; /* Orange-red color to make it pop */
}

.movie-info .card-cast .cast-label {
  font-weight: bold; /* Bold font for the label */
  color: #008000; /* Green color to distinguish it */
}

/* Style the admin panel button */
.admin-panel-btn {
  display: block;
  margin-top: 20px;
  padding: 10px 20px;
  background-color: #ff8c00; /* Bright orange for the button */
  color: #fff; /* White text for contrast */
  text-align: center;
  text-decoration: none;
  border-radius: 4px; /* Rounded corners for the button */
  transition: background-color 0.3s ease; /* Smooth background color transition on hover */
}

.admin-panel-btn:hover {
  background-color: #e67600; /* Darker orange on hover */
}

